@model List<dotnetapp.Models.Book>

@{
    ViewBag.Title = "Book List";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Your layout file
}

<h2>Book List</h2>

<div>
    <a asp-action="Create" asp-controller="Book" class="btn btn-primary">Create New</a>
</div>

<div class="card-container">
    @foreach (var item in Model)
    {
        <div class="card">
            <h4>@item.Id</h4>
            <h4>@item.Name</h4>
            <p>Author: @item.Author</p>
            <p>Language: @item.Language</p>
            <p>Type: @item.Type</p>
            <p>Title: @item.Title</p>
            
            <a href="@Url.Action("Update", "Book", new { id = item.Id })" class="btn btn-info">Update</a>
            
            <form asp-action="Delete" asp-controller="Book" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="id" value="@item.Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    }
</div>

<style>
    /* Define styles for the card container and cards */
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .card {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        width: 250px;
    }
</style>
